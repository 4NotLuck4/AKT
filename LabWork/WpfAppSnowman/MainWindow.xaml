<Window x:Class="WpfAppSnowman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSnowman"
        mc:Ignorable="d"
        Title="Snowman" Height="500" Width="500">
    <Canvas Background="LightBlue">
        <!-- Тело -->
        <Ellipse Canvas.Left="150" Canvas.Top="50" Width="200" Height="200" Fill="White"/>
        <Ellipse Canvas.Left="125" Canvas.Top="150" Width="250" Height="200" Fill="White"/>
        <Ellipse Canvas.Left="100" Canvas.Top="250" Width="300" Height="200" Fill="White"/>

        <!-- Глаза -->
        <Ellipse Canvas.Left="180" Canvas.Top="120" Width="20" Height="20" Fill="Black"/>
        <Ellipse Canvas.Left="280" Canvas.Top="120" Width="20" Height="20" Fill="Black"/>

        <!-- Нос -->
        <Polygon Points="250,150 230,180 270,180" Fill="Orange"/>

        <!-- Шляпа -->
        <Rectangle Canvas.Left="120" Canvas.Top="30" Width="260" Height="30" Fill="Black"/>
        <Rectangle Canvas.Left="170" Canvas.Top="0" Width="160" Height="50" Fill="Black"/>

        <!-- Руки -->
        <Line X1="80" Y1="200" X2="180" Y2="230" Stroke="Brown" StrokeThickness="5"/>
        <Line X1="420" Y1="200" X2="320" Y2="230" Stroke="Brown" StrokeThickness="5"/>

        <!-- Пуговицы -->
        <Ellipse Canvas.Left="240" Canvas.Top="200" Width="20" Height="20" Fill="Black"/>
        <Ellipse Canvas.Left="240" Canvas.Top="250" Width="20" Height="20" Fill="Black"/>
        <Ellipse Canvas.Left="240" Canvas.Top="300" Width="20" Height="20" Fill="Black"/>
    </Canvas>
</Window>
