<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="Выравнивание текста" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox Name="TextInput"
                 Height="100"/>
        <RadioButton Content="По левому краю"
                     GroupName="TextAligmentRadioButton"
                     Checked="RadioButton_Checked"/>
        <RadioButton Content="По центру"
                     GroupName="TextAligmentRadioButton"
                     Checked="RadioButton_Checked"/>
        <RadioButton Content="По правому краю"
                     GroupName="TextAligmentRadioButton"
                     Checked="RadioButton_Checked"/>
    </StackPanel>
</Window>
