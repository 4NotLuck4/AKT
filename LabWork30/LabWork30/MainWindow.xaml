<Window x:Class="LabWork30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork30"
        mc:Ignorable="d"
        Title="Какаято рассылка" Height="450" Width="800">

    <StackPanel>
        <Label Content="Логин"/>
        <TextBox Name="LoginTextBox"/>
        
        <Label Content="Email"/>
        <TextBox Name="EmailTextBox"/>
        
        <CheckBox Name="MailingCheckbox"
                  Content="Я согласен на получение рассылки!!"
                  Checked="MailingCheckbox_Checked"
                  Unchecked="MailingCheckbox_Unchecked"/>
        
        <Button Name="SubscribeButton"
                Content="Подписаться"
                IsEnabled="False"/>
    </StackPanel>

</Window>
