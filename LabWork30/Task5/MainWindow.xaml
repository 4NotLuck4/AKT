<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="Изменение цвета" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="Красный"/>
        <Slider Name="RedSlider"
                Minimum="0"
                Maximum="255"
                ValueChanged="ColorSlider_ValueChanged"/>
        
        <Label Content="Зеленый"/>
        <Slider Name="GreenSlider"
                Minimum="0"
                Maximum="255"/>
        
        <Label Content="Синий"/>
        <Slider Name="BlueSlider"
                Minimum="0"
                Maximum="255"/>
        <CheckBox Name="ApplyColorCheckBox"
                  Content="Применить цвет"
                  Checked="ApplyColorCheckBox_Checked"
                  Unchecked="ApplyColorCheckBox_Unchecked"/>
    </StackPanel>
</Window>
